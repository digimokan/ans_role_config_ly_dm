# vim: set filetype=conf:
# ANSIBLE-MANAGED CONFIGURATION FILE
# Local config sample:
#   {{ ly_config_path }}.sample
# Upstream config source:
#   https://github.com/fairyglade/ly/blob/master/res/config.ini

# system default PATH environment var
path = {{ path_env_var }}

# save login (user & session) used
save = {{ 'true' if save_and_load_login else 'false' }}

# load the saved login (user & session) on next Ly start as defaults
load = {{ 'true' if save_and_load_login else 'false' }}

# login save file path (saves which user and session logged in)
save_file = {{ login_save_path }}

# cookie-generator command path
mcookie_cmd = {{ cookie_gen_cmd }}

# Xorg server command path
x_cmd = {{ xorg_server_cmd }}

# Xorg Xauthority command path
xauth_cmd = {{ xorg_xauth_cmd }}

# dir path for externally-installed WM/DE '.desktop' files (used in Ly menu)
xsessions = {{ xsessions_dir }}

# Ly Xorg setup script path
x_cmd_setup = {{ ly_xsetup_script }}

# dir path for externally-installed WM/DE Wayland session files (used in Ly menu)
waylandsessions = {{ wayland_sessions_dir }}

# add Wayland specifier to session names
wayland_specifier = {{ 'true' if add_wayland_session_specifier else 'false' }}

# Ly Wayland setup script path
wayland_cmd = {{ ly_wayland_setup_script }}

